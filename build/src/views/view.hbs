<div class="row">
    <div class="col col-md-12">
        <div class="card">
            <div class=" card-body">
                <h2 class="card-title">Sentence: {{task.secuence}}</h2>
                <p class="card-text">Latitude: {{task.lat}}</p>
                <p class="card-text">Longitude: {{task.lon}}</p>
                <p class="card-text">Date: {{task.date}}</p>
            </div>
        </div>
    </div>
</div>
<br>
<div class="row">
    <script
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDxmi4EId4iRHVaPof0PeD_sBCNrHefWX0&language=en&callback=initMap&libraries=&v=weekly"
        defer>
        </script>
    <script>

        const last = {{{ json task }}};

        function addMarker(coords, map, info) {
            let marker = new google.maps.Marker({
                position: coords,
                map,
                icon: "https://i.ibb.co/zVNGcnT/yate.png"
            });
            let aux = '<div><h5> ' + info + '</h5></div>';
            let infoWindow = new google.maps.InfoWindow({
                content: aux
            });
            marker.addListener('click', () => {
                infoWindow.open(map, marker);
            });
        }

        function initMap() {
            let options = {
                zoom: 11,
                center: { lat: last.lat, lng: last.lon },
                disableDefaultUI: true,
                disableDoubleClickZoom: true,
                fullscreenControl: false,
                draggable: true,
                mapTypeControl: true,
                mapTypeControlOptions: { style: google.maps.MapTypeControlStyle.DROPDOWN_MENU },
                navigationControl: true,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            }
            let map = new google.maps.Map(document.getElementById("map"), options);
            addMarker({ lat: last.lat, lng: last.lon }, map, last.date);
        }
    </script>

    <style>
        #map {
            width: 100%;
            height: 500px;
        }
    </style>

    <div class="col col-md-12">
        <div class="card">
            <div class="card-body">
                <div id="map">

                </div>
            </div>
        </div>
    </div>
</div>
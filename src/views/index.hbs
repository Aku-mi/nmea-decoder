<div class="row">
    <div class="col col-md-4">
        <div class="card">
            <div class="card card-body">
                <form action="/add" method="POST">
                    <div class="form-group">
                        <input type="text" name="secuence" class="form-control" placeholder="NMEA Sentence" autofocus
                            autocomplete="off" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Add</button>
                </form>
            </div>
        </div>
        <br>
        <div class="card card-body">
            <blockquote class="blockquote text-center">
                <p class="mb-0">Last Input</p>
            </blockquote>
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="text-center">
                            Latitude
                        </th>

                        <th class="text-center">
                            Longitude
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="text-center">
                            {{last.lat}}
                        </td>
                        <td class="text-center">
                            {{last.lon}}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <script
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDxmi4EId4iRHVaPof0PeD_sBCNrHefWX0&language=en&callback=initMap&libraries=&v=weekly"
        defer>
        </script>
    <script>

        const last = {{{ json last }}};

        function addMarker(coords, map, info) {
            let marker = new google.maps.Marker({
                position: coords,
                map,
                icon: "https://i.ibb.co/zVNGcnT/yate.png"
            });
            let aux = '<div><h5> ' + info + '</h5></div>';
            let infoWindow = new google.maps.InfoWindow({
                content: aux
            });
            marker.addListener('click', () => {
                infoWindow.open(map, marker);
            });
        }

        function initMap() {
            let options = {
                zoom: 11,
                center: { lat: last.lat, lng: last.lon },
                disableDefaultUI: true,
                disableDoubleClickZoom: true,
                fullscreenControl: false,
                draggable: true,
                mapTypeControl: true,
                mapTypeControlOptions: { style: google.maps.MapTypeControlStyle.DROPDOWN_MENU },
                navigationControl: true,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            }
            let map = new google.maps.Map(document.getElementById("map"), options);
            addMarker({ lat: last.lat, lng: last.lon }, map, last.date);
        }
    </script>

    <style>
        #map {
            width: 100%;
            height: 500px;
        }
    </style>

    <div class="col col-md-8">
        <div class="card">
            <div class="card-body">
                <div id="map">

                </div>
            </div>
        </div>
    </div>
</div>